{
    "name": "squipix/laravel-idempotency",
    "description": "Stripe-style idempotency for Laravel APIs and queues",
    "keywords": [
        "laravel",
        "idempotency",
        "api",
        "queue",
        "stripe"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Squipix",
            "email": "info@squipix.com"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/database": "^10.0|^11.0",
        "illuminate/cache": "^10.0|^11.0",
        "illuminate/http": "^10.0|^11.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^10.0|^11.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.10",
        "mockery/mockery": "^1.6",
        "promphp/prometheus_client_php": "^2.0",
        "laravel/pulse": "^1.0"
    },
    "suggest": {
        "promphp/prometheus_client_php": "Required for Prometheus metrics collection (^2.0)",
        "laravel/pulse": "Required for Laravel Pulse integration (^1.0)"
    },
    "autoload": {
        "psr-4": {
            "squipix\\Idempotency\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "squipix\\Idempotency\\IdempotencyServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "check-style": "vendor/bin/php-cs-fixer fix --dry-run --diff",
        "fix-style": "vendor/bin/php-cs-fixer fix",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
